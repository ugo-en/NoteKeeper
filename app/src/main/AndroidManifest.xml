<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notekeeper">
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@mipmap/icon_notebook"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_notebook_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".screens.SplashActivity"
            android:theme="@style/AppTheme_NoActionBar"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- <activity android:name=".screens.MainActivity"></activity> -->
        <activity
            android:name=".screens.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".screens.PrivacyPolicyActivity"
            android:label="@string/privacy_policy"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".screens.DeveloperContactActivity"
            android:label="@string/developer_contact"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".screens.NotebookActivity"
            android:label="@string/notebook_label"
            android:theme="@style/AppTheme_NoActionBar" />
        <activity
            android:name=".screens.NoteActivity"
            android:label="@string/note_label"
            android:theme="@style/AppTheme_NoActionBar" />
    </application>

</manifest>